<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/repository_card_corner_radius"
    app:contentPadding="@dimen/repository_card_padding"
    app:elevation="@dimen/repository_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/repository_name"
            style="@style/DefaultTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_github_repository"
            android:drawablePadding="@dimen/repository_card_default_padding"
            android:gravity="center"
            tools:text="Repository name goes here" />

        <TextView
            android:id="@+id/repository_description"
            style="@style/DefaultTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/repository_card_default_padding"
            android:layout_marginBottom="@dimen/repository_card_default_padding"
            tools:text="Repository description goes here" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/repository_language"
                style="@style/DefaultTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/circle16"
                android:drawablePadding="@dimen/repository_card_default_padding"
                android:gravity="center"
                android:layout_marginEnd="@dimen/repository_card_details_spacing"
                tools:text="Kotlin" />

            <TextView
                android:id="@+id/repository_num_stars"
                style="@style/DefaultTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_github_star"
                android:drawablePadding="@dimen/repository_card_default_padding"
                android:gravity="center"
                android:layout_marginEnd="@dimen/repository_card_details_spacing"
                tools:text="3" />

            <TextView
                android:id="@+id/repository_num_forks"
                style="@style/DefaultTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_github_fork"
                android:drawablePadding="@dimen/repository_card_default_padding"
                android:gravity="center"
                android:layout_marginEnd="@dimen/repository_card_details_spacing"
                tools:text="3" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>